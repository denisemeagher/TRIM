          <div class="col-xs-2 col-md-2 p-0">
            <%= s.number_field :communication_skills, class: "skills-value form-control p-0", min: 0, max: 3, required: true %>
          </div>
        </div>

        <div class="col-xs-12 p-0">
          <div class="col-xs-10 col-md-10 pl-0">
            <%= s.label "My Energy Levels:", class: "skills-name" %>
          </div>
          <div class="col-xs-2 col-md-2 p-0">
            <%= s.number_field :energy, class: "skills-value form-control p-0", min: 0, max: 3, required: true %>
          </div>
        </div>

        <div class="col-xs-12 p-0 mb-2">
          <div class="col-xs-10 col-md-10 pl-0">
            <%= s.label "Intelligence / Aptitude:", class: "skills-name" %>
          </div>
          <div class="col-xs-2 col-md-2 p-0">
            <%= s.number_field :aptitude, class: "skills-value form-control p-0", min: 0, max: 3, required: true %>
          </div>
        </div>
    <% end %>
  </div>
<!-- end skills list -->

  <div class="send"><%= f.submit 'Submit', class: 'submit-info form-control' %></div>

  <% end %>
</div>
