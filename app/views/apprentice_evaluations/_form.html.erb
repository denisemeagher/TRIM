          <div class="col-xs-2 col-md-2 p-0">
            <%= s.number_field :css, class: "skills-value form-control p-0", min: 0, max: 4, required: true %>
          </div>
        </div>

        <div class="col-xs-12 p-0">
          <div class="col-xs-10 col-md-10 pl-0">
            <%= s.label "Working on a Team:", class: "skills-name" %>
          </div>
          <div class="col-xs-2 col-md-2 p-0">
            <%= s.number_field :teamwork, class: "skills-value form-control p-0", min: 0, max: 3, required: true %>
          </div>
        </div>

        <div class="col-xs-12 p-0">
