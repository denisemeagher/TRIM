      <%= f.label  "My Energy Level" %>
      <%= s.select :energy, options_for_select((1..4).step(1).map{|s| ["#{s}", s]})%>
    <br>
      <%= f.label  "Intelligence / Aptitude" %>
      <%= s.select :aptitude, options_for_select((1..4).step(1).map{|s| ["#{s}", s]})%>
    <br>
  <% end %>

  <%= f.submit %>

<% end %>
