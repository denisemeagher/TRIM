          <span> <%= s.label "Communication Skills:", :class => "col-sm-10 h-100 skills-name" %>
          </span>
          <span><%= s.number_field :communication_skills, :class => "col-sm-2 h-100 skills-value form-control" %>
          </span>
        </div>

        <div class=" skills">
          <span> <%= s.label "My Energy Level:", :class => "col-sm-10 h-100 skills-name" %>
          </span>
          <span> <%= s.number_field :energy, :class => "col-sm-2 h-100 skills-value form-control" %> </span>
        </div>

        <div class=" skills">
          <span> <%= s.label "Intelligence / Aptitude:", :class => "col-sm-10 h-100 skills-name" %>
          </span>
          <span>
            <%= s.number_field :aptitude, :class => "col-sm-2 h-100 skills-value form-control" %>
          </span>
        </div>
    <% end %>
  </div>
<!-- end skills list -->

  <div class=""><%= f.submit 'Submit', :class => 'submit-info' %></div>

  <% end %>
</div>
