    <br>
      <%= f.label  "Problem Solving Skills" %>
      <%= s.select :problem_solving, options_for_select((1..4).step(1).map{|s| ["#{s}", s]})%>
    <br>
      <%= f.label  "Javascript" %>
      <%= s.select :javascript, options_for_select((1..4).step(1).map{|s| ["#{s}", s]})%>
    <br>
      <%= f.label  "HTML" %>
      <%= s.select :html, options_for_select((1..4).step(1).map{|s| ["#{s}", s]})%>
