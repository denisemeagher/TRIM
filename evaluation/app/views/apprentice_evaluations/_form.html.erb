<%= form_for @apprentice_evaluation do |f| %>

   <%= f.text_field :fullname, :placeholder => "Full Name" %>
<br>
   <%= f.text_field :email, :placeholder => "Email"%>
<br>
   <%= f.text_field :projectrepo, :placeholder => "Project Repo" %>
<br>
   <%= f.text_field :projecturl, :placeholder => "Project Url" %>
<br>

  <%= f.fields_for :skills_attributes do |s| %>
